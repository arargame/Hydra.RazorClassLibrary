@inherits CheckboxComponentModel

<InputComponent CssClass="@GetCssClass()"
                CssStyle="@GetCssStyle()"
                Debugger="@Debugger"
                Id="@Id"
                IsDisabled="@IsDisabled"
                IsReadonly="@IsReadonly"
                IsTested="@IsTested"
                IsVisible="@IsVisible"
                LabelValue="@LabelValue"
                Name="@Name"
                Placeholder="@Placeholder"
                T="bool"
                Type="@Type"
                Value="@Value"
                ValueChanged="@ValueChanged" 
                WithLabel="@WithLabel" />
       


@* <InputComponent T="bool"/> *@

@code {

    private InputComponent<bool>? InputRef;

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }


    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }


    private void OnChange(bool newValue)
    {
        ValueChanged.InvokeAsync(newValue);
    }

}