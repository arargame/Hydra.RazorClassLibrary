@page "/checkboxcomponent-test"
@using Hydra.RazorClassLibrary.Components
@using Hydra.RazorClassLibrary.Utils


<TestElementDisplay TTypeOfHtmlElementComponent="bool"  HtmlElementComponent="CheckboxComponentModel">
</TestElementDisplay>


@code {

    private CheckboxComponentModel CheckboxComponentModel = new();

    protected override void OnInitialized()
    {
        var ComponentDebugger = new ComponentDebugger();

        var renderFragment = BlazorHelper.GetRenderFragment(type: typeof(CheckboxComponent),
                                                            parameters: new Dictionary<string, object>()
                                                            {
                                                                { "Debugger", ComponentDebugger },
                                                                {"IsTested", true }
                                                            });


        CheckboxComponentModel.SetContent(renderFragment)
                                .SetDebugger(ComponentDebugger);



        base.OnInitialized();
    }
}
